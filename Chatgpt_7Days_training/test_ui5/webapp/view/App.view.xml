<mvc:View
    controllerName="my.test.app.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <App id="app">
        <pages>
            <Page title="{i18n>title}">
                <content>
                    <VBox class="sapUiSmallMargin" alignItems="Center" justifyContent="Center">
                        <Label text="Welcome to UI5" class="sapUiSmallMarginBottom"/>
                        <!-- 您的按鈕在這裡 -->
                        <Button text="Say Hello" press=".onPress" type="Emphasized"/>
                    </VBox>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
