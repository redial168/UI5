<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="com.mycompany.myui5app.controller.App"
>
  <Page title="{i18n>appTitle}">
    <content>
      <Text text="Hi, {app>/user/name}" />
      <Text text="Counter: {app>/counter}" />
      <Button text="{i18n>btnAdd}" press=".onAdd" />

      <Toolbar>
        <Title text="Items" level="H2"/>
      </Toolbar>

      <List items="{app>/items}" itemPress=".onItemPress">
        <StandardListItem title="{app>name}" description="ID: {app>id}" type="Active" />
      </List>
    </content>
  </Page>
</mvc:View>
